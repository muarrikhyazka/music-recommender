# Production Environment Configuration for Munder
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://music-recommender.yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://munder:CHANGE_THIS_PASSWORD@localhost:27017/munder?authSource=admin
MONGO_ROOT_USERNAME=munder
MONGO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD
MONGO_DATABASE=munder

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@localhost:6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# Security
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING

# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=https://music-recommender.yourdomain.com/auth/callback

# Weather API Configuration
# Get from https://openweathermap.org/api
WEATHER_API_KEY=your_openweather_api_key_here

# GeoIP API Configuration (Optional)
# Get from https://ipgeolocation.io/
GEOIP_API_KEY=your_geoip_api_key_here

# Frontend Configuration
REACT_APP_API_URL=/api

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration (if using direct HTTPS)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# Cloudflare Configuration (Optional)
CF_API_TOKEN=your_cloudflare_api_token
CF_ZONE_ID=your_cloudflare_zone_id

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30